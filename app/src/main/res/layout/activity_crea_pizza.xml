<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreaPizza">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbarCreaPizza"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#00FFFFFF"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.406"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imgPizzaCreaPizza"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/margarita" />

  <androidx.core.widget.NestedScrollView
      android:id="@+id/nestedScrollCreaPizza"
      android:layout_width="411dp"
      android:layout_height="665dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbarCreaPizza"
      android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TableRow
          android:id="@+id/rowInvisible"
          android:layout_width="match_parent"
          android:layout_height="100dp" />

      <TableRow
          android:id="@+id/rowPrincipal"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#FFFFFF">

        <TableRow
            android:id="@+id/rowTexto"
            android:layout_width="410dp"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/txtTitulo"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Alabama Pulled Pork"
              android:textSize="24sp"
              android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="400dp"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/txtDescripcionPizza"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Salsa barbacoa original, queso 100% mozzarella, pulled pork ahumado, maÃ­z, salsa ranchera por encima y queso cheddar espolvorado sobre el borde." />
        </TableRow>
      </TableRow>
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>